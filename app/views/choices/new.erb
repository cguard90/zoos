<div>
  <form method="POST" action="/choices">
    <label for="choice-value">Choice</label>
    <input id="choice-value" type="text" placeholder="choice" name="choice[value]"/>
    <input type="hidden" name="survey_id" value="<%= @survey.id %>"/>

    <input type="submit" value="Add another choice"/>
  </form>
  <form method="GET" action="/questions/new">
    <input type="hidden" name="survey_id" value="<%= @survey.id %>"/>

    <input type="submit" value="Finish Question"/>
  </form>
</div>

<% if @errors %>
  <ul>
    <% @errors.each do |errors| %>
      <li><%= errors %></li>
    <% end %>
  </ul>
<% end %>
