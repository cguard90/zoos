<h1><%=@survey.title%></h1>
<p><%=@survey.description%></p>
<%counter = 0%>
<h2>Poll questions:</h2>
<%@survey.questions.each_with_index do |question, index|%>
  <p><%=index + 1%>. <%=question.body%>:</p>
  <p>choices:
    <%question.choices.each do |choice| %>
      <a href="Where do I go?"><%=choice.value%></a>
    <%end%>
  </p>
<%end%>
